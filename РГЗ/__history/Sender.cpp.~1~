			}
			Sleep(300);
}
//---------------------------------------------------------------------------

void __fastcall TForm1::FormCloseQuery(TObject *Sender, bool &CanClose)
{
	TerminateThread(hThread,1);
	for(int p=0;p<i;p++)
			{
				if(!hp.empty())
				{
					hh = hp.front();
					GetExitCodeProcess(hh, &lpExitCode);
					if (lpExitCode == STILL_ACTIVE)
					{

						TerminateProcess(hh,666);

					}
					CloseHandle(hh);
					hp.pop();
				}
			}
}
